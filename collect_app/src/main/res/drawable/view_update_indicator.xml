<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dp"/>
            <gradient
                android:startColor="@color/color_progress_bar_background"
                android:centerColor="@color/color_progress_bar_background"
                android:endColor="@color/color_progress_bar_background"
                android:centerY="1.0"
                android:angle="270"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dp"/>
                <gradient
                    android:startColor="@color/color_progress_bar_start"
                    android:centerColor="@color/color_progress_bar_end"
                    android:endColor="@color/color_progress_bar_end"
                    android:centerY="1.0"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>