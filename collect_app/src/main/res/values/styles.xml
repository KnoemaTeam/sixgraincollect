<?xml version="1.0" encoding="utf-8"?>
<resources>>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_screen_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:colorBackground">@color/colorAppBarPopupBackground</item>
        <item name="android:textColor">@color/colorAppBarPopupText</item>
        <item name="actionModeCloseDrawable">@drawable/ic_done_white_24dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorAppBarPopupBackground</item>
        <item name="android:textColor">@color/colorAppBarPopupText</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorRadioButtonText</item>
    </style>

    <style name="AppTheme.CheckBoxButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorCheckBoxButtonText</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/navigation_button</item>
        <item name="android:textColor">@color/colorNavigationButtonFont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/navigation_button</item>
        <item name="android:textColor">@color/colorNavigationButtonFont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:textColor">@color/colorDialogButtonFont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/colorEditTextFont</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorListViewTitleText</item>
    </style>

    <style name="SubtitleTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorListViewSubtitleText</item>
    </style>

    <style name="RoundedImageTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:background">@drawable/rounded_image_view</item>
    </style>

</resources>
