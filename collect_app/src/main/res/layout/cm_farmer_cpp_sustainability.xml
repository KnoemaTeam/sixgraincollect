<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/cppProtectiveGearTitle"
            android:text="@string/farmer_cpp_protective_gear"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/cppProtectiveGearGroup1"
                android:orientation="vertical"/>

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/cppProtectiveGearGroup2"
                android:orientation="vertical"/>

        </LinearLayout>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/cppMainReasonTitle"
            android:text="@string/farmer_cpp_main_reason"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/cppMainReasonGroup1"
                android:orientation="vertical"/>

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/cppMainReasonGroup2"
                android:orientation="vertical"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
