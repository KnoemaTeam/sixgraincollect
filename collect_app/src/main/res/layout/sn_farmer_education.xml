<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/educationTitle"
            android:text="@string/farmer_education_level"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/educationGroup1"
                android:orientation="vertical"/>

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/educationGroup2"
                android:orientation="vertical"/>

        </LinearLayout>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/otherEducationTitle"
            android:text="@string/farmer_other_education"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/otherEducationText"
            android:inputType="text" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/nineaTitle"
            android:text="@string/farmer_ninea"/>

        <RadioGroup
            style="@style/RadioGroupTheme"
            android:id="@+id/nineaGroup"
            android:orientation="horizontal"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/nineaNumberTitle"
            android:text="@string/farmer_ninea_number"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/nineaNumberText"
            android:inputType="text" />

    </LinearLayout>
</ScrollView>