<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/waterSourceTitle"
            android:text="@string/zambia_water_source"/>

        <RadioGroup
            style="@style/RadioGroupTheme"
            android:id="@+id/waterSourceGroup"
            android:orientation="vertical"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/motiveTitle"
            android:text="@string/zambia_main_motive"/>

        <RadioGroup
            style="@style/RadioGroupTheme"
            android:id="@+id/motiveGroup"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView>