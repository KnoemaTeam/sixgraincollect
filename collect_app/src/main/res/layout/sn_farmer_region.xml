<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/farmerIdentityList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_list_divider"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/regionText"
            android:text="@string/farmer_region"/>

        <Spinner
            style="@style/AppTheme.SpinnerTheme"
            android:id="@+id/regionSpinner" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_list_divider"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/departmentText"
            android:text="@string/farmer_department" />

        <Spinner
            style="@style/AppTheme.SpinnerTheme"
            android:id="@+id/departmentSpinner" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_list_divider"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/districtText"
            android:text="@string/farmer_district" />

        <Spinner
            style="@style/AppTheme.SpinnerTheme"
            android:id="@+id/districtSpinner" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_list_divider"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/townText"
            android:text="@string/farmer_town" />

        <Spinner
            style="@style/AppTheme.SpinnerTheme"
            android:id="@+id/townSpinner" />

    </LinearLayout>
</ScrollView>