<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fieldWaterMotiveInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/isFertilizerUsedTitle"
            android:text="@string/tunisia_fertilizer_used"/>

        <RadioGroup
            style="@style/RadioGroupTheme"
            android:id="@+id/isFertilizerUsedGroup"
            android:orientation="horizontal" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/fertilizerAmountTitle"
            android:text="@string/tunisia_fertilizer_amount"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/fertilizerAmountText"
            android:inputType="numberDecimal" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/fertilizerCostTitle"
            android:text="@string/tunisia_fertilizer_cost"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/fertilizerCostText"
            android:inputType="numberDecimal" />

    </LinearLayout>
</ScrollView>