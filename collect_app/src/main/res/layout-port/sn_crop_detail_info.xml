<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/waterSourceTitle"
            android:text="@string/senegal_crop_water_source"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/waterSourceGroup1"/>

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/waterSourceGroup2"/>

        </LinearLayout>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/irrigationSourceTitle"
            android:text="@string/senegal_crop_irrigation_source"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/irrigationSourceGroup1"/>

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/irrigationSourceGroup2"/>

        </LinearLayout>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/harvestedAmountTitle"
            android:text="@string/senegal_crop_harvested_amount"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/harvestedAmountText"
            android:inputType="numberDecimal" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/productionReasonsTitle"
            android:text="@string/senegal_crop_production_reason"/>

        <LinearLayout
            android:id="@+id/productionReasonsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView>