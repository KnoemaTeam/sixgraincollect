<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/fungicidesUsedTitle"
            android:text="@string/farmer_fungicides_used"/>

        <RadioGroup
            style="@style/RadioGroupTheme"
            android:id="@+id/fungicidesUsedGroup"
            android:orientation="horizontal"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/fungicidesUsedInSmallSeasonTitle"
            android:text="@string/farmer_fungicides_used_in_small_season"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/fungicidesUsedInSmallSeasonText"
            android:inputType="text" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/fungicidesUsedNumberInSmallSeasonTitle"
            android:text="@string/farmer_fungicides_used_number_in_small_season"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/fungicidesUsedNumberInSmallSeasonText"
            android:inputType="number" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/fungicidesUsedInBigSeasonTitle"
            android:text="@string/farmer_fungicides_used_in_big_season"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/fungicidesUsedInBigSeasonText"
            android:inputType="text" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/fungicidesUsedNumberInBigSeasonTitle"
            android:text="@string/farmer_fungicides_used_number_in_big_season"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/fungicidesUsedNumberInBigSeasonText"
            android:inputType="number" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/insecticideUsedTitle"
            android:text="@string/farmer_insecticide_used"/>

        <RadioGroup
            style="@style/RadioGroupTheme"
            android:id="@+id/insecticideUsedGroup"
            android:orientation="horizontal"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/insecticideUsedTypeTitle"
            android:text="@string/farmer_insecticide_used_type"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/insecticideUsedTypeText"
            android:inputType="text" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/insecticideUsedNumberTitle"
            android:text="@string/farmer_insecticide_used_number"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/insecticideUsedNumberText"
            android:inputType="number" />

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/cocoaPlantationTitle"
            android:text="@string/farmer_main_issue_cocoa_plantation"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            style="@style/EditTextTheme"
            android:id="@+id/cocoaPlantationText"
            android:inputType="text" />

    </LinearLayout>
</ScrollView>