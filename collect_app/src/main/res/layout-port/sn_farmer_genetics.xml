<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TitleTheme"
            android:text="@string/farmer_genetic_title"/>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/vaccinesUsageTitle"
            android:text="@string/farmer_genetic_usage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/geneticUsageGroup1"
                android:orientation="vertical"/>

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/geneticUsageGroup2"
                android:orientation="vertical"/>

        </LinearLayout>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/geneticTypeTitle"
            android:text="@string/farmer_genetic_type"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/geneticTypeGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/geneticTypeGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"/>

        </LinearLayout>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/sanitaryControlUsageTitle"
            android:text="@string/farmer_sanitary_control_usage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/sanitaryControlUsageGroup1"
                android:orientation="vertical"/>


            <RadioGroup
                style="@style/RadioGroupTheme"
                android:id="@+id/sanitaryControlUsageGroup2"
                android:orientation="vertical"/>

        </LinearLayout>

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/sanitaryControlTypeTitle"
            android:text="@string/farmer_sanitary_control_type" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sanitaryControlTypeGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/sanitaryControlTypeGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>