<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fieldCropPhotoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SubtitleTheme"
            android:id="@+id/photoTitle"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="@string/zambia_crop_photo"
            android:gravity="center"/>

        <ImageView
            style="@style/FieldBigPhotoTheme"
            android:id="@+id/photoView"
            android:contentDescription="@null"/>

        <Button
            android:id="@+id/photoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/view_image_button_navigation"
            android:text="@string/action_capture_photo" />

    </LinearLayout>
</ScrollView>